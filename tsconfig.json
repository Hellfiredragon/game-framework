{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "module": "commonjs",
        "target": "es6",
        "charset": "utf8",
        "jsx": "react",
        "moduleResolution": "Node",
        "declaration": false,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
